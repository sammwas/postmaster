@model List<Bank>
@{
    ViewData["Active"] = "HR";
    ViewData["Title"] = "Banks";
}
<div>
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">@ViewData["Title"] <span class="text-right"><a asp-action="EditBank" asp-route-id="" class="btn btn-sm btn-info">Add New</a></span></h3>
        </div>
        <div class="card-body">
            <table id="dataTable" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Code</th>
                        <th>Name</th>
                        <th>Contact Person</th>
                        <th>Phone Number</th>
                        <th>Email</th>
                        <th>Website</th>
                        <th>Status</th>
                        <th>Options</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Code</td>
                            <td>@item.Name </td>
                            <td>@item.ContactPerson </td>
                            <td>@item.PhoneNumber</td>
                            <td>@item.EmailAddress</td>
                            <td>@item.Website</td>
                            <td>@item.Status</td>
                            <td>
                                <a asp-action="EditBank" asp-route-id="@item.Id" class="btn btn-info btn-xs">
                                    <i class="fas fa-pencil-alt">
                                    </i>
                                    Edit
                                </a>
                                <a asp-action="ById" asp-route-id="@item.Id" class="btn btn-danger btn-xs">
                                    <i class="fas fa-trash">
                                    </i>
                                    Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <th>Code</th>
                        <th>Name</th>
                        <th>Contact Person</th>
                        <th>Phone Number</th>
                        <th>Email</th>
                        <th>Website</th>
                        <th>Status</th>
                        <th>Options</th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>
