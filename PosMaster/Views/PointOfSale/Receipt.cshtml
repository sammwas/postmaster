@model Receipt
@inject ICookiesService _cookies;
@{
    ViewData["Active"] = "POS";
    var title = $"Receipt {Model.Code}";
    ViewData["Title"] = title;
    var userData = _cookies.Read();
    var status = Model.IsPrinted ? "COPY" : "ORIGINAL";
    var saleType = Model.IsCredit ? "CREDIT SALE" : $"CASH SALE";
}
<div class="card card-primary">
    <div class="card-header row d-print-none">
        <div class="col-6">
            <h3 class="card-title">
                @ViewData["Title"]
            </h3>
        </div>
        <div class="col-6">
            <span class="pull-right text-right">
                <button class="btn btn-secondary btn-block" data-printed="@Model.IsPrinted" data-id="@Model.Id"
                    id="btnPrintReceipt">
                    <i class="fa fa-print"></i> Print Receipt
                </button>
            </span>
        </div>
    </div>
    <div class="card-body" id="printReceiptDiv">
        @{
            <style type="text/css">
                @@media print {
                    #printReceiptDiv {
                        height: auto;
                        font-size: 200%;
                    }

                    #printReceiptDiv>div>div>h4 {
                        color: red;
                        text-decoration: underline
                    }
                }
            </style>
        }
        <div class="row">
            <div class="col-md-6">
                <h4>@userData.ClientName</h4>
                <h5>@userData.InstanceName</h5>
                <h6>@userData.PinNo</h6>
                <p>Served By : @Model.PersonnelName</p>
            </div>
            <div class="col-md-6">
                <p><b>Receipt No.</b> @Model.Code <span class="badge badge-info">@status</span> </p>
                <p><b>Customer </b> @Model.Customer.FullName </p>
                <p>
                    <b>Type </b> @saleType
                    @if (Model.Balance > 0)
                    {
                        <span>Balance @Model.Balance</span>
                    }
                    @if (Model.PaymentMode != null)
                    {
                        <span>(@Model.PaymentMode.Name)</span>
                    }
                </p>
                @if (!string.IsNullOrEmpty(Model.PinNo))
                {
                    <p><b>PIN No.</b> @Model.PinNo</p>
                }
                <p><b>Date </b>@Model.DateCreated</p>
            </div>
        </div>
        <div class="row">
            <table class="table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Product</th>
                        <th>Qty</th>
                        <th>Price</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        var i = 0;
                    }
                    @foreach (var item in Model.ReceiptLineItems)
                    {
                        i++;
                        <tr>
                            <td>@i<span>.</span></td>
                            <td>@item.Product.Code - @item.Product.Name</td>
                            <td>@item.Quantity</td>
                            <td>@item.UnitPrice</td>
                            <td>@Helpers.FormatAmount(item.Amount)</td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="3"></td>
                        <td>Tax</td>
                        <td>@Helpers.FormatAmount(Model.Tax)</td>
                    </tr>
                    @if (Model.Discount >= 0)
                    {
                        <tr>
                            <td colspan="3" style="border:none"></td>
                            <td>Discount</td>
                            <td>@Helpers.FormatAmount(Model.Discount)</td>
                        </tr>
                    }
                    <tr>
                        <td colspan="3" style="border:none"></td>
                        <td>Total</td>
                        <td><b>@userData.CurrencyShort @Helpers.FormatAmount(Model.Amount)</b></td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
    <div class="card-footer row d-print-none">
        <div class="col-4">
            <a asp-action="Receipts" class="btn btn-secondary"><i class="fa fa-list"></i> View Receipts </a>
        </div>
        <div class="col-4">
        </div>
        <div class="col-4">
            <a asp-action="Index" class="btn btn-primary"><i class="fa fa-shopping-basket"></i> Make Sale Now</a>
        </div>
    </div>
</div>
