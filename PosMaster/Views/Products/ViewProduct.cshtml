@model ProductDataViewModel
@{
    ViewData["Active"] = "Products";
    var title = $"Product {Model.Product?.Code}";
    ViewData["Title"] = title;
}
<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">@ViewData["Title"]</h3>
    </div>
    <div class="row">
        <div class="col-md-8">
            <div class="card-body">
                @if (!Model.Success)
                {
                    <div class="col-md-12">
                        <div class="alert alert-warning">
                            <p class=""><i class="fa fa-exclamation-circle fa-2x"></i> Data not available - @Model.Message</p>
                        </div>
                    </div>
                }
                else
                {
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Code</label>
                                <span>@Model.Product.Code</span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Name</label>
                                <span>@Model.Product.Name</span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Category</label>
                                <span>@Model.Product.ProductCategory?.Name</span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Available Qty</label>
                                <span>@Model.Product.AvailableQuantity @Model.Product.UnitOfMeasure</span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Discountable</label>
                                @if (Model.Product.AllowDiscount)
                                {
                                    <span>YES</span>
                                }
                                else
                                {
                                    <span>NO</span>
                                }
                            </div>
                        </div>
                        @if (Model.Product.ShowSellingPrice)
                        {
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Selling Price</label>
                                    <span>@Model.Product.SellingPrice</span>
                                </div>
                            </div>
                        }
                    </div>
                }
                @if (Model.ProductStockAdjustmentLogs.Any())
                {
                    <div class="row">
                        <h4>Stock adjustment Logs</h4>
                        <table class="table table-striped table-sm">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Quantity from</th>
                                    <th>Quantity to</th>
                                    <th>Date created</th>
                                    <th>Notes</th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <th>#</th>
                                    <th>Quantity from</th>
                                    <th>Quantity to</th>
                                    <th>Date created</th>
                                    <th>Notes</th>
                                </tr>
                            </tfoot>
                            <tbody>
                                @{
                                    var j = 0;
                                }
                                @foreach (var item in Model.ProductStockAdjustmentLogs)
                                {
                                    j++;
                                    <tr>
                                        <td>@j</td>
                                        <td>@item.QuantityFrom</td>
                                        <td>@item.QuantityTo</td>
                                        <td>@item.DateCreated</td>
                                        <td>@item.Notes</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                @if (Model.ProductPriceLogs.Any())
                {
                    <div class="row">
                        <h4>Price change Logs</h4>
                        <table class="table table-striped table-sm">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Price from</th>
                                    <th>Price to</th>
                                    <th>Start date</th>
                                    <th>End date</th>
                                    <th>Notes</th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <th>#</th>
                                    <th>Price from</th>
                                    <th>Price to</th>
                                    <th>Start date</th>
                                    <th>End date</th>
                                    <th>Notes</th>
                                </tr>
                            </tfoot>
                            <tbody>
                                @{
                                    var i = 0;
                                }
                                @foreach (var item in Model.ProductPriceLogs)
                                {
                                    i++;
                                    <tr>
                                        <td>@i</td>
                                        <td>@item.PriceFrom</td>
                                        <td>@item.PriceTo</td>
                                        <td>@item.PriceStartDate</td>
                                        <td>@item.PriceEndDate</td>
                                        <td>@item.Notes</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h4>Options</h4>
                    <div class="">
                        @if (!string.IsNullOrEmpty(Model.Product.ImagePath))
                        {
                            <img src="~/@Model.Product.ImagePath" alt="@Model.Product.Code" height="100" width="100" />
                        }
                        <div>
                        </div>
                        @if (Model.Success)
                        {
                            <p>
                                <span class="btn-block">Quantity sold:  @Model.TotalQtySold @Model.Product.UnitOfMeasure</span>
                                <span class="btn-block">Total sales:  @Model.TotalSales</span>
                            </p>
                            <p>

                                <a asp-route-id="@Model.Product.Id" asp-action="Edit" asp-controller="Products">Edit product</a>
                            </p>
                        }
                        <p>
                            <a asp-action="Index" asp-controller="Products">View products</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
