@model List<Product>
@{
    ViewData["Active"] = "Products";
    ViewData["Title"] = "Products";
}
<div>
    <!-- /.card -->

    <div class="card">
        <div class="card-header">
            <h3 class="card-title">@ViewData["Title"] <span class="text-right"><a asp-action="Edit" asp-route-id="" class="btn btn-sm btn-info">Add New</a></span></h3>
        </div>
        <!-- /.card-header -->
        <div class="card-body">
            <table id="example1" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Code</th>
                        <th>Name</th>
                        <th>Buying Price</th>
                        <th>Selling Price</th>
                        <th>Availability Quantity</th>
                        <th>Reorder Level</th>
                        <th>Unit of Measure</th>
                        <th>Options</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count > 0)
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Code</td>
                                <td>@item.Name</td>
                                <td>@item.BuyingPrice</td>
                                <td>@item.SellingPrice</td>
                                <td>@item.AvailableQuantity</td>
                                <td>@item.ReorderLevel</td>
                                <td>@item.UnitOfMeasure</td>
                                <td class="project-actions text-right">
                                    <a asp-action="ById" asp-route-id="@item.Id" class="btn btn-primary btn-xs">
                                        <i class="fas fa-folder">
                                        </i>
                                        View More
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info btn-xs">
                                        <i class="fas fa-pencil-alt">
                                        </i>
                                        Edit
                                    </a>
                                    <a asp-action="ById" asp-route-id="@item.Id" class="btn btn-danger btn-xs">
                                        <i class="fas fa-trash">
                                        </i>
                                        Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <th>Code</th>
                        <th>Name</th>
                        <th>Buying Price</th>
                        <th>Selling Price</th>
                        <th>Availability Quantity</th>
                        <th>Reorder Level</th>
                        <th>Unit of Measure</th>
                        <th>Options</th>
                    </tr>
                </tfoot>
            </table>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
</div>
