@inject IProductInterface _productInterface;
@inject ICookiesService _cookies;
@model ProductStockAdjustmentViewModel
@{
    ViewData["Active"] = "Products";
    var statuses = Helpers.Statuses();
    var title = $"Product Stock Adjustment";
    ViewData["Title"] = title;
    var userData = _cookies.Read();
}
<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">@ViewData["Title"]</h3>
    </div>

    <form role="form" method="post" autocomplete="off">
        <div asp-validation-summary="All" class="text-danger"></div>
        <input asp-for="Id" />
        <input asp-for="IsEditMode" />
        <input type="hidden" id="productCode" asp-for="Code" />
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="ProductId"></label>
                        <select class="form-control select2 product-select-search" asp-for="ProductId" style="width: 100%;" id="selectedProductAdj">
                            <option value="">--Select Product--</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="row">
                        <div class="col-6">
                            <div class="form-group">
                                <label>Current Qty</label>
                                <input class="form-control currentQuantity" value="" readonly>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group">
                                <label>Current Buy Price</label>
                                <input class="form-control currentPrice" value="" readonly>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="row">
                        <div class="col-6">
                            <div class="form-group">
                                <label asp-for="QuantityTo"></label>
                                <input asp-for="QuantityTo" class="form-control currentQuantity">
                                <span asp-validation-for="QuantityTo" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group">
                                <label asp-for="BuyingPriceTo"></label>
                                <input asp-for="BuyingPriceTo" class="form-control currentPrice">
                                <span asp-validation-for="BuyingPriceTo" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Notes"></label>
                        <input asp-for="Notes" class="form-control" rows="3" placeholder="Notes" />
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>
