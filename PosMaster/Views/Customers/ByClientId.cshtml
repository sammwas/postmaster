@model List<Customer>
@{
    ViewData["Active"] = "Customers";
    ViewData["Title"] = "Customers";
}
<div>
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">@ViewData["Title"] <span class="text-right"><a asp-action="Edit" asp-route-id="" class="btn btn-sm btn-info">Add New</a></span></h3>
        </div>
        <div class="card-body">
            <table id="example1" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Code</th>
                        <th>Name</th>
                        <th>Phone Number</th>
                        <th>Address</th>
                        <th>Town</th>
                        <th>Location</th>
                        <th>Email</th>
                        <th>Website</th>
                        <th>Options</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Code</td>
                            <td>
                                @item.FirstName <span>
                                @if (!string.IsNullOrEmpty(item.LastName))
                                {
                                    <span>@item.LastName</span>
                                }
                            </span>
                        </td>
                        <td>
                            @item.PhoneNumber
                        </td>
                        <td>@item.PostalAddress</td>
                        <td>@item.Town</td>
                        <td>@item.Location</td>
                        <td>@item.EmailAddress</td>
                        <td>@item.Website</td>
                        <td class="project-actions text-right">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info btn-xs">
                                <i class="fas fa-pencil-alt">
                                </i>
                                Edit
                            </a>
                            <a asp-action="ById" asp-route-id="@item.Id" class="btn btn-danger btn-xs">
                                <i class="fas fa-trash">
                                </i>
                                Delete
                            </a>
                        </td>
                    </tr>
                }
                </tbody>
                <tfoot>
                    <tr>
                        <th>Code</th>
                        <th>Name</th>
                        <th>Phone Number</th>
                        <th>Address</th>
                        <th>Town</th>
                        <th>Location</th>
                        <th>Email</th>
                        <th>Website</th>
                        <th>Options</th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>
