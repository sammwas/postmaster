@model ClientInstanceViewModel
@{
    ViewData["Active"] = "Clients";
    var statuses = Helpers.Statuses();
    var option = Model.IsEditMode ? "Update" : "Add";
    var title = $"{option} Client instance";
    ViewData["Title"] = title;
}
<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">@ViewData["Title"]</h3>
    </div>
    <form method="post" autocomplete="off">
        <div asp-validation-summary="All"></div>
        <input asp-for="Id" />
        <input asp-for="IsEditMode" />
        <input asp-for="ClientId" />
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Code"></label>
                        <input asp-for="Code" placeholder="Code" class="form-control">
                        <span asp-validation-for="Code" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" placeholder="Name" class="form-control">								<span asp-validation-for="Code" class="text-danger"></span>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Town"></label>
                        <input asp-for="Town" class="form-control" placeholder="Town">
                        <span asp-validation-for="Town" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Location"></label>
                        <input asp-for="Location" class="form-control" placeholder="Location">
                        <span asp-validation-for="Location" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="PostalAddress"></label>
                        <input asp-for="PostalAddress" class="form-control" placeholder="Postal Address">
                        <span asp-validation-for="PostalAddress" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="EmailAddress"></label>
                        <input asp-for="EmailAddress" class="form-control" placeholder="email@domain.com">
                        <span asp-validation-for="EmailAddress" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="PrimaryTelephone"></label>
                        <input asp-for="PrimaryTelephone" class="form-control numbers-only" placeholder="07XXXXXXXX">
                        <span asp-validation-for="PrimaryTelephone" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="SecondaryTelephone"></label>
                        <input asp-for="SecondaryTelephone" class="form-control numbers-only" placeholder="07XXXXXXXX">
                        <span asp-validation-for="SecondaryTelephone" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="Notes"></label>
                        <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Notes"></textarea>
                        <span asp-validation-for="Notes" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
        @if (!User.IsInRole(Role.Clerk))
        {
            <div class="card-footer">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        }
    </form>
</div>
