@inject ISystemSettingInterface _sysSettings;
@inject ICookiesService _cookies;
@{
    var settingRes = await _sysSettings.ReadAsync();
    var settings = settingRes.Data;
    var userData = _cookies.Read();
    var firstChar = userData.FirstName.ElementAtOrDefault(0);
    var firstDayOfWeek = Helpers.FirstDayOfWeek().ToString("dd-MMM-yyyy");
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@settings.Name | @ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/plugins/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" href="~/plugins/tempusdominus-bootstrap-4/css/tempusdominus-bootstrap-4.min.css">
    <link rel="stylesheet" href="~/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <link rel="stylesheet" href="~/plugins/jqvmap/jqvmap.min.css">
    <link rel="stylesheet" href="~/dist/css/adminlte.min.css">
    <link rel="stylesheet" href="~/plugins/overlayScrollbars/css/OverlayScrollbars.min.css">
    <link rel="stylesheet" href="~/plugins/daterangepicker/daterangepicker.css">
    <link rel="stylesheet" href="~/plugins/summernote/summernote-bs4.css">
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
    <link href="~/lib/toastr/toastr.min.css" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet">
    <link rel="stylesheet" href="~/plugins/summernote/summernote-bs4.min.css">
</head>
<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a asp-controller="Dashboard" asp-action="Index" class="nav-link">Home</a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="#" class="nav-link">Contact</a>
                </li>
            </ul>
            <form class="form-inline ml-3">
                <div class="input-group input-group-sm">
                    <input class="form-control form-control-navbar" type="search" placeholder="Search" aria-label="Search">
                    <div class="input-group-append">
                        <button class="btn btn-navbar" type="submit">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>
            </form>

            <ul class="navbar-nav ml-auto">
                <li class="dropdown user user-menu">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        <div class="image">
                            @if (string.IsNullOrEmpty(userData.ImagePath))
                            {
                                <span class="i-circle">@firstChar</span>
                            }
                            else
                            {
                                <img src="~/@userData.ImagePath" width="60" height="60" class="img-circle elevation-2" alt="@userData.FirstName">
                            }
                        </div>
                        <span class="hidden-xs">@userData.FullName</span>
                    </a>
                    <ul class="dropdown-menu">
                        <li class="user-header">
                            <div class="image">
                                @if (string.IsNullOrEmpty(userData.ImagePath))
                                {
                                    <span class="i-circle">@firstChar</span>
                                }
                                else
                                {
                                    <img src="~/@userData.ImagePath" width="160" height="160" class="img-circle elevation-2" alt="@userData.FirstName">
                                }
                            </div>

                            <p>
                                @userData.FullName - @userData.Role
                                <small>Added On : @userData.DateCreated</small>
                            </p>
                        </li>
                        <li class="user-footer">
                            <div class="pull-left">
                                <a asp-controller="Users" asp-action="Edit" asp-route-id="@userData.UserId" class="btn btn-default btn-flat">Profile</a>
                            </div>
                            <div class="pull-right">
                                <a asp-controller="Home" asp-action="Logout" class="btn btn-default btn-flat">Sign out</a>
                            </div>
                        </li>
                    </ul>
                </li>

                <li class="nav-item">
                    <a class="nav-link" data-widget="control-sidebar" data-slide="true" href="#" role="button">
                        <i class="fas fa-th-large"></i>
                    </a>
                </li>
            </ul>
        </nav>
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <a asp-controller="Dashboard" asp-action="Index" class="brand-link">
                @if (string.IsNullOrEmpty(userData.ClientLogoPath))
                {
                    <span class="i-circle">@userData.ClientName.ElementAtOrDefault(0)</span>
                }
                else
                {
                    <img src="~/@userData.ClientLogoPath" alt="@userData.ClientCode" class="brand-image img-circle elevation-3"
                         style="opacity: .8">
                }
                <span class="brand-text font-weight-light">@userData.ClientCode</span>
            </a>
            <div class="sidebar">
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        @if (string.IsNullOrEmpty(userData.ImagePath))
                        {
                            <span class="i-circle">@firstChar</span>
                        }
                        else
                        {
                            <img src="~/@userData.ImagePath" width="160" height="160" class="img-circle elevation-2" alt="@userData.FirstName">
                        }
                    </div>
                    <div class="info">
                        <a asp-controller="Users" asp-action="Edit" asp-route-id="@userData.UserId" class="d-block">@userData.FullName</a>
                    </div>
                </div>
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-item">
                            <a asp-controller="Dashboard" asp-action="Index" class="nav-link">
                                <i class="nav-icon fas fa-tachometer-alt"></i>
                                <p>
                                    Dashboard
                                </p>
                            </a>
                        </li>
                        <li class="nav-item has-treeview">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fa fa-calculator"></i>
                                <p>
                                    Point Of Sale
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a asp-controller="PointOfSale" asp-action="Index" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Sell</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="PointOfSale" asp-action="Receipts" asp-route-dtFrom="@firstDayOfWeek" asp-route-dtTo="@DateTime.Now.ToString("dd-MMM-yyyy")" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Receipts</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="PointOfSale" asp-action="Expenses" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Expenses</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="Customers" asp-action="ByClientId" asp-route-clientId="@userData.ClientId" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Customers</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Return Items</p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item has-treeview">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-users"></i>
                                <p>
                                    Users
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a asp-controller="Users" asp-action="All" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>View All</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="Users" asp-action="Edit" asp-route-id="" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Add New</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="Users" asp-action="All" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Summary</p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item has-treeview">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-table"></i>
                                <p>
                                    Instances
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a asp-controller="ClientInstances" asp-action="All" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>View All</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="ClientInstances" asp-action="Edit" asp-route-id="" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Add New</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="ClientInstances" asp-action="All" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Summary</p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                        @if (User.IsInRole(Role.SuperAdmin))
                        {
                            <li class="nav-item has-treeview">
                                <a href="#" class="nav-link">
                                    <i class="nav-icon fas fa-chart-pie"></i>
                                    <p>
                                        Clients
                                        <i class="right fas fa-angle-left"></i>
                                    </p>
                                </a>
                                <ul class="nav nav-treeview">
                                    <li class="nav-item">
                                        <a asp-controller="Clients" asp-action="All" class="nav-link">
                                            <i class="far fa-circle nav-icon"></i>
                                            <p>View All</p>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a asp-controller="Clients" asp-action="Edit" asp-route-id="" class="nav-link">
                                            <i class="far fa-circle nav-icon"></i>
                                            <p>Add New</p>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a asp-controller="Clients" asp-action="Summary" class="nav-link">
                                            <i class="far fa-circle nav-icon"></i>
                                            <p>Summary</p>
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }
                        <li class="nav-item has-treeview">
                            <a href="#" class="nav-link">
                                <i class="nav-icon far fa-plus-square"></i>
                                <p>
                                    Master Data
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a asp-controller="MasterData" asp-action="ProductCategories" asp-route-clientId="@userData.ClientId" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Product Categories</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="MasterData" asp-action="UnitOfMeasures" asp-route-clientId="@userData.ClientId" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Unit of Measures</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="MasterData" asp-action="ExpenseTypes" asp-route-clientId="@userData.ClientId" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Expense Types</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="MasterData" asp-action="PaymentModes" asp-route-clientId="@userData.ClientId" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Payment Modes</p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item has-treeview">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-th"></i>
                                <p>
                                    Products
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a asp-controller="Products" asp-action="All" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>View All</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="Products" asp-action="PurchaseOrders"
                                       asp-route-dtFrom="@firstDayOfWeek" asp-route-dtTo="@DateTime.Now.ToString("dd-MMM-yyyy")" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Purchase Orders</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="Products" asp-action="ProductStockAdjustment" asp-route-clientId="@userData.ClientId" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Stock Adjustment</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="Suppliers" asp-action="ByClientId" asp-route-clientId="@userData.ClientId" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Suppliers</p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                        @if (User.IsInRole(Role.SuperAdmin) || User.IsInRole(Role.Manager))
                        {
                            <li class="nav-item has-treeview">
                                <a href="#" class="nav-link">
                                    <i class="nav-icon fas fa-file"></i>
                                    <p>
                                        Reports
                                        <i class="right fas fa-angle-left"></i>
                                    </p>
                                </a>
                                <ul class="nav nav-treeview">
                                    <li class="nav-item">
                                        <a asp-controller="Reports" asp-action="SalesReport" asp-route-dtFrom="@firstDayOfWeek" asp-route-dtTo="@DateTime.Now.ToString("dd-MMM-yyyy")" class="nav-link">
                                            <i class="far fa-circle nav-icon"></i>
                                            <p>Weekly Report</p>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a asp-controller="Reports" asp-action="SalesReport" asp-route-dtFrom="@Helpers.firstDayOfMonth.ToString("dd-MMM-yyyy")" asp-route-dtTo="@Helpers.lastDayOfMonth.ToString("dd-MMM-yyyy")" class="nav-link">
                                            <i class="far fa-circle nav-icon"></i>
                                            <p>Monthly Report</p>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a asp-controller="Settings" asp-action="SendTestEmail" class="nav-link">
                                            <i class="far fa-circle nav-icon"></i>
                                            <p>Test Email</p>
                                        </a>
                                    </li>
                                </ul>
                            </li>

                        }
                        <li class="nav-item has-treeview">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-cog"></i>
                                <p>
                                    Settings
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a asp-controller="Clients" asp-action="Edit" asp-route-id="@userData.ClientId" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Setup</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="Settings" asp-action="EmailSettings" asp-route-clientId="@userData.ClientId" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Email Settings</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="Settings" asp-action="SendTestEmail" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Test Email</p>
                                    </a>
                                </li>
                                @if (User.IsInRole(Role.SuperAdmin))
                                {
                                    <li class="nav-item">
                                        <a asp-controller="Settings" asp-action="TermsAndPrivacy" class="nav-link">
                                            <i class="far fa-circle nav-icon"></i>
                                            <p>Terms &amp; Privacy</p>
                                        </a>
                                    </li>
                                }
                            </ul>
                        </li>
                    </ul>
                </nav>

            </div>
        </aside>

        <div class="content-wrapper">
            <div class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1 class="m-0 text-dark">@ViewData["Title"]</h1>
                        </div>
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-right">
                                <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="Index">Home</a></li>
                                <li class="breadcrumb-item active">@ViewData["Title"]</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
            <section class="content">
                <div class="container-fluid">
                    <main role="main" class="pb-3">
                        @RenderBody()
                    </main>
                </div>
            </section>
        </div>
        <footer class="main-footer">
            <strong>Copyright &copy; @DateTime.Now.Year <a asp-controller="Dashboard" asp-action="Index">@settings.Name</a>.</strong>
            All rights reserved.
            <div class="float-right d-none d-sm-inline-block">
                <b>Version</b> @settings.Version
            </div>
        </footer>

        <aside class="control-sidebar control-sidebar-dark">
        </aside>
    </div>
    <script src="~/plugins/jquery/jquery.min.js"></script>
    <script src="~/plugins/jquery-ui/jquery-ui.min.js"></script>
    <script>
        $.widget.bridge('uibutton', $.ui.button)
    </script>
    <script src="~/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/plugins/chart.js/Chart.min.js"></script>
    <script src="~/plugins/sparklines/sparkline.js"></script>
    <script src="~/plugins/moment/moment.min.js"></script>
    <script src="~/plugins/daterangepicker/daterangepicker.js"></script>
    <script src="~/plugins/bootstrap-colorpicker/js/bootstrap-colorpicker.min.js"></script>
    <script src="~/plugins/tempusdominus-bootstrap-4/js/tempusdominus-bootstrap-4.min.js"></script>
    <script src="~/plugins/overlayScrollbars/js/jquery.overlayScrollbars.min.js"></script>
    <script src="~/lib/toastr/toastr.min.js"></script>
    <script src="~/dist/js/adminlte.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/plugins/bs-custom-file-input/bs-custom-file-input.min.js"></script>
    <script src="~/plugins/summernote/summernote-bs4.min.js"></script>
    <script src="~/js/site.js"></script>

    <script>
		$(function () {
			bsCustomFileInput.init();
        });
        $('.rich-text').summernote();
    $(document).ready(function () {
    var opt = "@ViewData["Active"]";
    $("#menu" + opt).addClass("active");
    var message = '@TempData["Message"]';
    var title = '@TempData["Title"]';
    var type = '@TempData["Type"]';
    if (message.length > 0) {
        if (type === 'Success')
            toastr.success(message, title);
        else if (type === 'Error')
            toastr.error(message, title);
        else
            toastr.warning(message, title);
        }
  });
    </script>
</body>
</html>
